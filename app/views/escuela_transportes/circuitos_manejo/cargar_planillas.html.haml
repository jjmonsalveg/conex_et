= provide(:title, 'Modelos de Planillas Para Practica de Manejo')

= render 'escuela_transportes/shared/ficha_datos'

.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          %h2
            Registro de Circuitos de Manejo
          %ol.breadcrumb
            %li
              = link_to 'Información General', escuela_transportes_informacion_general_new_get_path(id: @escuela_transporte)
            %li
              = link_to 'Planos Infraestructura',escuela_transportes_cargar_planos_path(id: @escuela_transporte)
            %li
              = link_to 'Datos del Seguro RCV', new_escuela_transportes_seguro_path(id: @escuela_transporte)
            %li
              = link_to 'Documentos de Vehiculos', escuela_transportes_vehiculos_path(id: @escuela_transporte.id)
            %li
              Registro de Circuitos de Manejo

  .row.animated.fadeInRight
    = render 'shared/error_messages', object: @escuela_transporte, model: 'Información General'
    = render  'shared/show_modelo_modals_documentos_paginados',vista: :registro_circuitos_manejo,modelo: @solicitud.circuito
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          = form_for @escuela_transporte,
           url:  escuela_transportes_guardar_circuito_path(@escuela_transporte),
           html: {class: 'form-horizontal m-t-md', id: 'form-informacion-general',:multipart => true} do |f|
            .form-group
            = render 'shared/solicitud_documents',f:f, list_documents: @lista_documentos
            = render 'escuela_transportes/escuela_transportes/shared/buttons_bottom',f:f,
              text_prev:'Regresar',
              clase_prev: '<i class="fa fa-folder-open-o"></i>',
              url_prev:  escuela_transportes_informacion_general_index_path,
              text_next: 'Guardar Información general',
              clase_next: '<i class="fa fa-floppy-o"></i>'

