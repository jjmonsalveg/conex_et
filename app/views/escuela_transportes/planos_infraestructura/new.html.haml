= provide(:title, 'Planos de la Infraestructura')


.wrapper.wrapper-content
  .row.animated.fadeInRight
    = render 'escuela_transportes/shared/ficha_datos'
    = render 'escuela_transportes/shared/breadcrum_wizard_solicitud_adecuacion',title:'Carga de Documentos de Infraestructura',solicitud: @solicitud, icon: '<i class="fa fa-building-o"></i>'

  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          = form_for @escuela_transporte,
           url: escuela_transportes_guardar_planos_path(@escuela_transporte),
           method: :post ,
           html: {class: 'form-horizontal m-t-md'} do |f|
            .form-group
              = render 'shared/error_messages', object: f.object, model: 'Planos Infraestructura'
            = render 'shared/solicitud_documents',f:f, list_documents: @lista_documentos

            = render 'escuela_transportes/escuela_transportes/shared/buttons_bottom', f:f ,
              text_prev:'Volver a Informacion General',
              clase_prev: '<i class="fa fa-database"></i>',
              url_prev:  escuela_transportes_informacion_general_new_path(id: @escuela_transporte.id),
              text_next: 'Guardar Planos',
              clase_next: '<i class="fa fa-floppy-o"></i>'
