= provide(:title, 'Planos de la Infraestructura')

= render 'escuela_transportes/shared/ficha_datos'


.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          %h2
            Carga de Documentos de Infraestructura
          %ol.breadcrumb
            %li
              = link_to 'Informaci√≥n General', escuela_transportes_informacion_general_new_get_path(id: @escuela_transporte)
            %li
              = link_to 'Documentos de Vehiculos', escuela_transportes_vehiculos_path(id: @escuela_transporte.id)
            %li
              Planos de Infraestructura

  .row
    .col-md-12.col-md-offset-0
      %ul.text-muted.leyenda
        %strong.text-navy Ayuda:
        %li.text-justify
          Los Campos con
          %span.fa.fa-asterisk.red
          son obligatorios.
          Los campos con
          %span.fa.fa-asterisk.verde
          indican que se debe ingresar al menos uno de esos documentos

.row.animated.fadeInRight
  .col-md-12
    .ibox.float-e-margins
      .ibox-content
        = form_for @escuela_transporte,
         url: escuela_transportes_guardar_planos_path(@escuela_transporte),
         method: :post ,
         html: {class: 'form-horizontal m-t-md'} do |f|
          .form-group
            = render 'shared/error_messages', object: f.object, model: 'Planos Infraestructura'
          = render 'shared/solicitud_documents',f:f

          = render 'escuela_transportes/escuela_transportes/shared/buttons_bottom',f:f,
            text_prev:'Volver a Informacion General',
            clase_prev: '<i class="fa fa-database"></i>',
            url_prev:  escuela_transportes_informacion_general_new_path(id: @escuela_transporte.id),
            text_next: 'Guardar Planos',
            clase_next: '<i class="fa fa-floppy-o"></i>'
