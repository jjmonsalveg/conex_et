.row
  .col-sm-12
    .ibox.float-e-margins
      .ibox-content
        .row
          .col-sm-2
            = link_to  url_prev,
            class: "btn btn-info" do
              = text_prev
              = clase_prev.html_safe
          .col-sm-3.col-lg-offset-7
            = f.button(type: 'submit',  class: 'btn btn-success btn-block',
             data: { disable_with: "Por favor espere..." }) do
              = text_next
              = clase_next.html_safe