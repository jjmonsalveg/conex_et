= provide(:title, 'Visualizar Trabajador')

.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          %h2
            Registro de Trabajadores
          %ol.breadcrumb
            %li
              = link_to 'Información General', escuela_transportes_informacion_general_new_get_path(id: @escuela_transporte)
            %li
              = link_to 'Planos Infraestructura',escuela_transportes_cargar_planos_path(id: @escuela_transporte)
            -if @solicitud.seguro_not_save?
              %li
                = link_to 'Datos del Seguro RCV', new_escuela_transportes_seguro_path(id: @escuela_transporte)
            %li
              = link_to 'Documentos de Vehiculos', escuela_transportes_vehiculos_path(id: @escuela_transporte.id)
            %li
              = link_to 'Registro de Circuitos de Manejo', escuela_transportes_index_circuitos_path(id: @escuela_transporte.id)
            %li
              = link_to 'Registro de trabajadores', escuela_transportes_listar_personals_path(id: @escuela_transporte.id)

.row.animated.fadeInRight
  = render 'escuela_transportes/shared/ficha_datos', show: false

.row.animated.fadeInRight
  .col-md-12.col-md-offset-0
    .ibox.float-e-margins
      .ibox-title
        %h3
      .ibox-content
        .row
          %table.table.table-striped.table-bordered.table-condensed
            %thead
              %tr
                %th.text-center
                  Nombres
                %th.text-center
                  Apellidos
                %th.text-center
                  Cédula
                %th.text-center
                  Tipo de Personal
              %tbody
                %tr
                  %td.text-center
                    #{@personal.nombre}
                  %td.text-center
                    #{@personal.apellido}
                  %td.text-center
                    ="#{@personal.nacionalidad+'-'+@personal.cedula}"
                  %td.text-center
                    #{@personal.tipo_personal}

.row.animated.fadeInRight
  = render 'shared/servicio_intt_documentos', model: @personal, nombre_vista_param: :trabajadores
  = render 'shared/servicio_intt_documentos', model: @personal,
    nombre_vista_param: :trabajadores_instructores if @personal.instructor?
  .row
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          .row
            .col-sm-2
              = link_to 'Listar Trabajadores',
              escuela_transportes_listar_personals_path(id: @escuela_transporte.id),
              class: "btn btn-info"
  %br
  %br
  %br
