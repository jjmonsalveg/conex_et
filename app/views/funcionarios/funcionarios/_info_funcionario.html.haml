            %h3
              Datos Personales
          .ibox-content
            .row
              .col-md-3
                %h4
                  %strong Nombres: &nbsp;
                  = @funcionario.nombre
              .col-md-3
                %h4
                  %strong
                    Apellidos: &nbsp;
                  = @funcionario.apellido
              .col-md-2
                %h4
                  %strong
                    CÃ©dula: &nbsp;
                  = @funcionario.nacionalidad+'-'
                  = @funcionario.cedula
              .col-md-3
                %h4
                  %strong
                    Sexo: &nbsp;
                  = @funcionario.sexo
            .row
              .col-md-12
                = render 'form'
        - else
          .ibox-content
            = @funcionario