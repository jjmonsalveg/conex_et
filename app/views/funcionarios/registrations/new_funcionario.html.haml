.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      Nuevo Funcionario
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        Registro de Funcionario

.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            Registro de Funcionario
        .ibox-content
          = form_for(@funcionario, as: resource_name, url: {action: 'create_funcionario'}, html: {class:"form-horizontal m-t-md", id: "form_registro_funcionario"}) do |f|
            = devise_error_messages!
            .form-group
              = f.label :login, "Login: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :login, autofocus: true, class: 'form-control'
            .form-group
              = f.label :password, "Contraseña: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.password_field :password, autocomplete: "off", class: 'form-control'
            .form-group
              = f.label :password_confirmation, "Confirme Contraseña: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
            .form-group
              = f.label :email, "Correo Electrónico: ", class: 'col-sm-2 control-label'
              .col-sm-10
                = f.email_field :email, class: "form-control"
            .form-group
              = label_tag "Roles: ", "Roles: ", class: 'col-sm-2 control-label'
              .col-sm-10
                %table
                  %tbody
                  = f.collection_check_boxes :rol_ids, Rol.all, :id, :nombre do |r|
                    %tr
                      %td= r.label
                      %td= r.check_box
            .form-group
              .col-sm-3.col-sm-offset-5
                = f.submit "Guardar", class: "btn btn-success btn-block"