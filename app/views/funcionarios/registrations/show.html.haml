.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      Nuevo Funcionario
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        = link_to "Registro de Funcionario", funcionarios_new_path
      %li
        Nuevo Funcionario

.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          %h3
            Registro de Funcionario
        .ibox-content
          %p#notice= notice
          %h3
            %strong Login:
            = @funcionario.login
          %h3
            %strong Contraseña:
            = @pass
          %h3
            %strong Correo Electrónico:
            = @funcionario.email
          %h3
            %strong Roles:

            - @funcionario.rols.each do |rol|
              = rol.nombre + " - "
          %br/
          .row
            .col-md-12
              .alert.alert-danger.alert-dismissable.alerts-fix
                %strong
                  NOTA: La contraseña solo podra ser visualizada unicamente al momento del registro.
