%h1 Listing tipo_escuelas
%table
  %thead
    %tr
      %th Nombre
      %th{:colspan => "3"}
  %tbody
    - @tipo_escuelas.each do |tipo_escuela|
      %tr
        %td= tipo_escuela.nombre
        %td= link_to 'Show', tipo_escuela
        %td= link_to 'Edit', edit_tipo_escuela_path(tipo_escuela)
        %td= link_to 'Destroy', tipo_escuela, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Tipo escuela', new_tipo_escuela_path
