.row.gray-bg.dashboard-header
  .col-lg-9.col-lg-offset-3
    .text-center.animated.fadeInDown.loginscreen.register-size
      %div
        %h1.logo-name
          CONEX-ET
        %h2 Cambio de Contrase単a
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .form-group
            .col-lg-6
              = f.label 'Nueva Contrase単a:', class: 'control-label'
              %br/
            .col-lg-5
              = f.password_field :password, autofocus: true, autocomplete: 'off'
              %br/
              %br/
          %br/
          .form-group
            .col-lg-6
              = f.label 'Confirmar Nueva Contrase単a:'
              %br/
            .col-lg-5
              = f.password_field :password_confirmation, autocomplete: 'off'
              %br/
              %br/
          %br/
          %br/
          .form-group
            .col-lg-5.col-lg-offset-5
              = f.submit 'Cambio de Contrase単a', class: 'btn btn-success'
        - render 'session_users/shared/links'
%br/
